# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DB=veda
POSTGRES_HOST=localhost       # or 'postgres' when running via docker-compose
POSTGRES_PORT=5432
# Optional full URL (will override parts above if set)
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/veda

# Auth & tokens
JWT_SECRET=secret_key
JWT_ALG=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:5173/oauth/callback

# Ollama + Pinecone
OLLAMA_URL=http://localhost:11434
OLLAMA_API_KEY=
PINECONE_API_KEY=
PINECONE_ENV=
PINECONE_INDEX=veda-index

# Audio provider settings
AUDIO_PROVIDER=ollama          # options: 'ollama' or 'bhashini'
BHASHINI_BASE_URL=https://bhashini.gov.in/api/v1
BHASHINI_API_KEY=

# LLM provider flags
LLM_PROVIDER=local
LLM_ENDPOINT=http://llm:8080
ENABLE_MODERATION=true
ENABLE_METRICS=false

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# App
DEBUG=true
